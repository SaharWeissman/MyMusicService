<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saharw.mymusicservice.MainActivity">

    <TextView
        android:id="@+id/txtV_file_uri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edTxt_file_uri_default"
        android:textSize="@dimen/txt_size_normal"
        android:textColor="@color/txt_color_main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_choose_file"
        android:textColor="@color/txt_color_main"
        android:textSize="@dimen/txt_size_normal"
        android:text="@string/btn_choose_file"
        app:layout_constraintTop_toBottomOf="@id/txtV_file_uri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
